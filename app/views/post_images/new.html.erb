<h1>画像投稿フォーム</h1>

<!--エラーメッセージの記述-->
<% if @post_image.errors.any? %>  <!--any?と組み合わせることで、エラーが発生しているかどうか判定できる-->
  <%= @post_image.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_image.errors.full_messages.each do |message| %>  <!--full_messageと組み合わせることでエラーの内容を出力できる-->
                                                              <!--エラー文は配列で保存されているため、eachを使用する-->
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @post_image do |f| %>

  <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>  <!--画像アップロードフィールドの実装-->

  <h4>ショップ名</h4>
    <%= f.text_field :shop_name %>

  <h4>説明</h4>
    <%= f.text_area :caption %>

  <%= f.submit '投稿' %>

<% end %>